<p id="notice"><%= notice %></p>

<h1>Listing Referents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Role</th>
      <th>Phone</th>
      <th>Mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referents.each do |referent| %>
      <tr>
        <td><%= referent.name %></td>
        <td><%= referent.surname %></td>
        <td><%= referent.role %></td>
        <td><%= referent.phone %></td>
        <td><%= referent.mail %></td>
        <td><%= link_to 'Show', referent %></td>
        <td><%= link_to 'Edit', edit_referent_path(referent) %></td>
        <td><%= link_to 'Destroy', referent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

